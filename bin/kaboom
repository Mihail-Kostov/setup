#!/bin/zsh
source $DOTFILES/index.zsh

DIR_BIN="$( cd "$( dirname "${0}" )" && pwd )"
source $DIR_BIN/.symlinks

if [ "$FIRSTRUN" = "true" ]
then
  source appstore
fi

# required first
setup brew

notify "Password might be required"
if [ "$FIRSTRUN" = "true" ]
then
  sleep 5
  notify "Since it's a full run, it might be asked more than once. Check often until process is complete."
fi

# Ask for the administrator password upfront
sudo -v

setup osx
setup git

setup node
setup _cli
setup ssh

setup synergy

setup slate

setup atom

setup sync
#setup cloud
#setup cloudup
setup grabbox
setup grabbox-cleanup

setup browsers

setup logitech

setup osx-enhancements

if [ "$FIRSTRUN" = "true" ]; then fuckosx; fi;

setup chat
setup multimedia

setup download

# not needed by default anymore
#setup dnsmasq
#setup apache
#setup php
#setup mysql

setup dyndns
setup prey

setup dock

# lazyload misc & big stuff
setup misc

fuckosx

# todo add cron setup

echo ""
notify "Setup complete ☑️"
