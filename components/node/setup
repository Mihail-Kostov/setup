#!/bin/zsh

if ! type node > /dev/null
then
  echo_title_install "Node.js"
  brewinstall node
fi

echo_title_installupdate "NPM global packages"
if [ "$FULLFIRE" = "true" ]
then
  npmug
fi

# release tool
npmig mversion

# package helpers
npmig npm-check
npmig pkg-name
npmig bower

# build tools
npmig component
npmig gulp
npmig grunt-cli

# browserify all the things
npmig browserify
npmig tape
npmig testling
npmig coverify

# code quality tools
npmig htmlhint
npmig csslint
npmig jshint
npmig jshint-stylish
npmig jscs

# happyplan launcher
npmig happyplan-cli
