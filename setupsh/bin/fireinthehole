#!/bin/zsh

export DOTFILES="$( cd "$( dirname "${0}" )"/../../ && pwd )"
source $DOTFILES/setupsh/index.zsh

echo "\n(╯°□°）╯ ︵ $CHAR_BOOM\n"

# Ask for the administrator password upfront
sudo -v

# update from remote
echo_title_update "from remote"

cd $DOTFILES
git pull origin master
git submodule init
git submodule update

export FIRSTRUN=false
if [ "$1" = "--firstrun" ]
then
  export FIRSTRUN=true
fi

source $DOTFILES/setupsh/bin/kaboom
